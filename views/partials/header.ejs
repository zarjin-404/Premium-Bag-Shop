<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Bag Shop</title>
  </head>
  <body class="bg-gray-100">
    <header class="bg-blue-600 text-white shadow-lg">
      <div
        class="container mx-auto flex justify-between items-center py-4 px-6"
      >
        <!-- Logo -->
        <h1 class="text-2xl font-bold tracking-tight">
          <a href="/" class="hover:text-yellow-400">Scatch</a>
        </h1>

        <% var loggedin = typeof loggedin !== "undefined" ? loggedin : true; %>
        <% if (loggedin) { %>

        <!-- Navigation -->
        <nav class="hidden md:block">
          <ul class="flex space-x-6 text-lg">
            <li><a href="/shop" class="hover:text-yellow-400">Shop</a></li>
            <li>
              <a href="/cart" class="hover:text-yellow-400">Cart</a>
            </li>
            <li><a href="/" class="hover:text-yellow-400">My Account</a></li>
            <li>
              <a href="/users/logout" class="hover:text-red-400">Logout</a>
            </li>
          </ul>
        </nav>

        <!-- Mobile Menu Button -->
        <button
          class="md:hidden flex items-center text-yellow-400 focus:outline-none"
          id="menu-btn"
          aria-label="Toggle menu"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            stroke-width="2"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M4 6h16M4 12h16m-7 6h7"
            />
          </svg>
        </button>
      </div>

      <!-- Mobile Navigation -->
      <nav
        class="md:hidden bg-blue-500 text-white transform scale-y-0 origin-top transition-transform duration-300 ease-in-out"
        id="mobile-menu"
      >
        <ul class="flex flex-col space-y-4 p-4">
          <li><a href="/shop" class="hover:text-yellow-400">Shop</a></li>
          <li><a href="/cart" class="hover:text-yellow-400">Cart</a></li>
          <li><a href="/" class="hover:text-yellow-400">My Account</a></li>
          <li>
            <a href="/users/logout" class="hover:text-red-400">Logout</a>
          </li>
        </ul>
      </nav>
    </header>

    <script>
      // Mobile menu toggle with animation
      const menuBtn = document.getElementById('menu-btn');
      const mobileMenu = document.getElementById('mobile-menu');

      menuBtn.addEventListener('click', () => {
        const isHidden = mobileMenu.classList.contains('scale-y-0');
        mobileMenu.classList.toggle('scale-y-0', !isHidden);
        mobileMenu.classList.toggle('scale-y-100', isHidden);
      });
    </script>
    <% } %>
  </body>
</html>
