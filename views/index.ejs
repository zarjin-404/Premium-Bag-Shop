<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="icon" href="/path-to-favicon.ico" />
    <title>Create or Login to Your Account</title>
  </head>
  <body class="bg-gray-50 font-sans">
    <!-- Include Header -->
    <%- include('./partials/header') %>

    <!-- Error Notification -->
    <% if (error && error.length > 0) { %>
    <div
      class="absolute top-5 left-1/2 transform -translate-x-1/2 bg-red-500 text-white px-4 py-3 rounded-md shadow-lg z-50"
    >
      <p><%= error %></p>
    </div>
    <% } %>

    <!-- Main Section -->
    <div class="flex items-center justify-center min-h-screen px-6 bg-gray-50">
      <div
        class="grid grid-cols-1 md:grid-cols-2 gap-8 w-full max-w-6xl bg-white shadow-lg rounded-lg overflow-hidden"
      >
        <!-- Registration Form -->
        <div class="p-8 bg-gray-100">
          <h3 class="text-3xl font-bold text-gray-800 mb-4">
            Welcome to <span class="text-blue-500">Scatch</span>
          </h3>
          <p class="text-gray-600 mb-6">Create your account to get started.</p>
          <form autocomplete="off" action="/users/register" method="post">
            <div class="mb-4">
              <input
                class="w-full px-4 py-2 bg-white border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400"
                type="text"
                placeholder="Full Name"
                name="fullname"
                required
              />
            </div>
            <div class="mb-4">
              <input
                class="w-full px-4 py-2 bg-white border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400"
                type="email"
                placeholder="Email"
                name="email"
                required
              />
            </div>
            <div class="mb-6">
              <input
                class="w-full px-4 py-2 bg-white border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400"
                type="password"
                placeholder="Password"
                name="password"
                required
              />
            </div>
            <button
              class="w-full bg-blue-500 text-white py-2 rounded-md shadow hover:bg-blue-600 transition focus:outline-none"
              type="submit"
            >
              Create My Account
            </button>
          </form>
        </div>

        <!-- Login Form -->
        <div class="p-8 bg-gray-50">
          <h3 class="text-3xl font-bold text-gray-800 mb-4">Login</h3>
          <p class="text-gray-600 mb-6">Access your account below.</p>
          <form autocomplete="off" action="/users/login" method="post">
            <div class="mb-4">
              <input
                class="w-full px-4 py-2 bg-white border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400"
                type="email"
                placeholder="Email"
                name="email"
                required
              />
            </div>
            <div class="mb-6">
              <input
                class="w-full px-4 py-2 bg-white border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400"
                type="password"
                placeholder="Password"
                name="password"
                required
              />
            </div>
            <button
              class="w-full bg-blue-500 text-white py-2 rounded-md shadow hover:bg-blue-600 transition focus:outline-none"
              type="submit"
            >
              Login
            </button>
          </form>
        </div>
      </div>
    </div>

    <!-- Include Footer -->
    <%- include('./partials/footer') %>
  </body>
</html>
